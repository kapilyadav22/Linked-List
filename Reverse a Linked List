class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        if(head==nullptr) return nullptr;
        if(head->next ==nullptr) return head;
        ListNode* curr=head;
        ListNode* temp=reverseList(head->next);
        curr->next->next=curr;
        curr->next=nullptr;
        return temp;
    }

};

// recursive approach
//TC = O(N)
//SC = O(1)
